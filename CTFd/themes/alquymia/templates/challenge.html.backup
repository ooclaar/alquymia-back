<div :class="getStyles()" role="document" x-data="Challenge" x-init='id = {{ challenge.id }}; max_attempts = {{ max_attempts }}; attempts = {{ attempts }};'>
  <div class="modal-content alquymia-modal">
    <style>
      .alquymia-modal {
        background: linear-gradient(135deg, rgba(26, 26, 26, 0.98) 0%, rgba(10, 10, 10, 0.98) 100%);
        border: 2px solid rgba(255, 140, 0, 0.3);
        border-radius: 16px;
        color: #e0e0e0;
      }
      
      .alquymia-modal .modal-body {
        padding: 2rem;
      }
      
      .alquymia-modal .btn-close {
        filter: invert(1);
        opacity: 0.8;
      }
      
      .alquymia-modal .btn-close:hover {
        opacity: 1;
      }
      
      .alquymia-modal .nav-tabs {
        border-bottom: 2px solid rgba(255, 140, 0, 0.3);
        margin-bottom: 2rem;
      }
      
      .alquymia-modal .nav-tabs .nav-link {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 600;
        color: #888;
        border: none;
        border-bottom: 3px solid transparent;
        background: transparent;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
      }
      
      .alquymia-modal .nav-tabs .nav-link:hover {
        color: #FF8C00;
        border-bottom-color: rgba(255, 140, 0, 0.3);
      }
      
      .alquymia-modal .nav-tabs .nav-link.active {
        color: #FF8C00;
        border-bottom-color: #FF8C00;
        background: transparent;
      }
      
      .alquymia-modal .challenge-name {
        font-family: 'Orbitron', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        color: #FF8C00;
        text-shadow: 0 0 20px rgba(255, 140, 0, 0.3);
        margin-bottom: 1rem;
      }
      
      .alquymia-modal .challenge-value {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: #FFA500;
        margin-bottom: 1.5rem;
      }
      
      .alquymia-modal .challenge-tag {
        font-family: 'Rajdhani', sans-serif;
        background: rgba(255, 140, 0, 0.2);
        border: 1px solid rgba(255, 140, 0, 0.4);
        color: #FF8C00;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        margin: 0.25rem;
      }
      
      .alquymia-modal .challenge-desc {
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        line-height: 1.8;
        color: #b0b0b0;
        display: block;
        margin: 2rem 0;
      }
      
      .alquymia-modal .challenge-connection-info {
        font-family: 'Rajdhani', sans-serif;
        font-size: 1rem;
        color: #0096FF;
      }
      
      .alquymia-modal .challenge-connection-info code {
        background: rgba(0, 150, 255, 0.1);
        border: 1px solid rgba(0, 150, 255, 0.3);
        color: #0096FF;
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
      }
      
      .alquymia-modal .btn-file {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 600;
        background: rgba(255, 140, 0, 0.1);
        border: 2px solid rgba(255, 140, 0, 0.3);
        color: #FF8C00;
        transition: all 0.3s ease;
      }
      
      .alquymia-modal .btn-file:hover {
        background: rgba(255, 140, 0, 0.2);
        border-color: #FF8C00;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 140, 0, 0.3);
      }
      
      .alquymia-modal .challenge-input {
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        background: rgba(26, 26, 26, 0.8);
        border: 2px solid rgba(255, 140, 0, 0.3);
        color: #e0e0e0;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      
      .alquymia-modal .challenge-input:focus {
        background: rgba(26, 26, 26, 0.9);
        border-color: #FF8C00;
        box-shadow: 0 0 20px rgba(255, 140, 0, 0.2);
        outline: none;
        color: #e0e0e0;
      }
      
      .alquymia-modal .challenge-submit {
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        font-weight: 700;
        background: linear-gradient(135deg, #FF8C00 0%, #FFA500 100%);
        border: 2px solid #FF8C00;
        color: #1a1a2e;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
      }
      
      .alquymia-modal .challenge-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 140, 0, 0.4);
      }
      
      .alquymia-modal details {
        background: rgba(26, 26, 26, 0.6);
        border: 1px solid rgba(255, 140, 0, 0.2);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
      }
      
      .alquymia-modal details summary {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 600;
        color: #FF8C00;
        cursor: pointer;
        user-select: none;
      }
      
      .alquymia-modal details summary:hover {
        color: #FFA500;
      }
      
      .alquymia-modal details[open] summary {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 140, 0, 0.2);
      }
      
      .alquymia-modal .alert {
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        border-radius: 8px;
        border: 2px solid;
      }
      
      .alquymia-modal .alert-success {
        background: rgba(0, 255, 136, 0.1);
        border-color: #00FF88;
        color: #00FF88;
      }
      
      .alquymia-modal .alert-danger {
        background: rgba(244, 67, 54, 0.1);
        border-color: #F44336;
        color: #F44336;
      }
      
      .alquymia-modal .alert-info {
        background: rgba(0, 150, 255, 0.1);
        border-color: #0096FF;
        color: #0096FF;
      }
      
      .alquymia-modal .alert-warning {
        background: rgba(255, 193, 7, 0.1);
        border-color: #FFC107;
        color: #FFC107;
      }
    </style>
    
    <div class="modal-body py-4 px-4 px-sm-5">
      <div>
        <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>

        <ul class="nav nav-tabs">
          <li class="nav-item">
            <button class="nav-link active" data-bs-target="#challenge" @click="showChallenge()">
              Desafio
            </button>
          </li>

          {% block submissions %}
            {% if Configs.view_self_submissions %}
            <li class="nav-item">
              <button class="nav-link challenge-submissions" data-bs-target="#submissions" @click="showSubmissions()">
                {% if solves != None %}
                  SubmissÃµes
                {% endif %}
              </button>
            </li>
            {% endif %}
          {% endblock %}

          {% block solves %}
            {% if solves != None %}
            <li class="nav-item">
              <button class="nav-link challenge-solves" data-bs-target="#solves" @click="showSolves()">
                  {{ solves }} ResoluÃ§Ã£o{% if solves != 1 %}Ãµes{% endif %}
              </button>
            </li>
            {% endif %}
          {% endblock %}
        </ul>
      </div>

      <div>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane fade show active" id="challenge">
            <h2 class="challenge-name text-center pt-3">
              {{ challenge.name }}
            </h2>
            <h3 class="challenge-value text-center">
              {{ challenge.value }} pontos
            </h3>

            {% if tags %}
              <div class="challenge-tags text-center pt-2 pb-3">
                {% block tags %}
                  {% for tag in tags %}
                    <span class="challenge-tag badge">{{ tag }}</span>
                  {% endfor %}
                {% endblock %}
              </div>
            {% endif %}

            <span class="challenge-desc">{% block description %}{{ challenge.html }}{% endblock %}</span>

            {% if challenge.connection_info %}
              <div class="mb-3">
                <span class="challenge-connection-info">
                  {% block connection_info %}
                    {% set conn = challenge.connection_info %}
                    {% if not conn %}
                    {% elif conn.startswith("http") %}
                      {{ conn | urlize(target="_blank") }}
                    {% else %}
                      <code>{{ conn }}</code>
                    {% endif %}
                  {% endblock %}
                </span>
              </div>
            {% endif %}

            {% if hints %}
              <div class="challenge-hints hint-row row">
                <div class="col-12 mb-3">
                {% for hint in hints | sort(attribute="cost") %}
                  <div x-data="Hint" x-init="id = {{ hint.id }}">
                    {% if hint.content %}
                    <details>
                      <summary>ðŸ’¡ Ver Dica{% if hint.title %}: {{ hint.title }}{% endif %}</summary>
                      <div>{{ hint.html | safe }}</div>
                    </details>
                    {% else %}
                    <details @toggle="showHint(event)">
                      {% if hint.title %}
                      <summary>ðŸ’¡ {{ hint.title }} (Custo: {{ hint.cost }} ponto{{ 's' if hint.cost != 1 else '' }})</summary>
                      {% else %}
                      <summary>ðŸ’¡ Desbloquear Dica por {{ hint.cost }} ponto{{ 's' if hint.cost != 1 else '' }}</summary>
                      {% endif %}
                      <div x-html="html"></div>
                    </details>
                    {% endif %}
                  </div>
                {% endfor %}
                </div>
              </div>
            {% endif %}

            {% if files %}
              <div class="row challenge-files text-center pb-3">
                {% for file in files %}
                  <div class="col-md-4 col-sm-4 col-xs-12 file-button-wrapper d-block">
                    {% set segments = file.split('/') %}
                    {% set token = file.split('?') | last %}
                    {% if token %}
                      {% set filename = segments | last | replace("?" + token, "") %}
                    {% else %}
                      {% set filename = segments | last %}
                    {% endif %}
                    <a
                        class="btn btn-file mb-1 d-inline-block px-2 w-100 text-truncate"
                        href="{{ file }}"
                        title="{{ filename }}"
                    >
                      <i class="fas fa-download"></i>
                      <small>
                        {{ filename }}
                      </small>
                    </a>
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            <template x-if="max_attempts > 0">
              <p class="text-center text-muted">
                <span x-text="attempts"></span>/<span x-text="max_attempts"></span> tentativa<span x-show="max_attempts > 1">s</span>
              </p>
            </template>

            <div class="row submit-row">
              <div class="col-12 col-sm-8">
                {% block input %}
                  <input
                      id="challenge-id" class="challenge-id" type="hidden"
                      value="{{ challenge.id }}"
                  >
                  <input
                      id="challenge-input" class="challenge-input form-control"
                      type="text" name="submission"
                      @keyup.enter="submitChallenge()"
                      placeholder="Digite a flag aqui..." x-model="submission"
                  >
                {% endblock %}
              </div>

              <div class="col-12 col-sm-4 mt-3 mt-sm-0 key-submit">
                {% block submit %}
                  <button
                      id="challenge-submit"
                      class="challenge-submit btn w-100 h-100" type="submit"
                      @click.debounce.500ms="submitChallenge()"
                  >
                    Enviar
                  </button>
                {% endblock %}
              </div>
            </div>

            <div class="row notification-row">
              <div class="col-12">
                <template x-if="response">
                  <div class="alert text-center w-100 mt-3"
                      :class="{
                        'alert-success': response.data.status == 'correct',
                        'alert-info': response.data.status == 'already_solved',
                        'alert-danger': response.data.status == 'incorrect',
                        'alert-warning': response.data.status == 'paused',
                      }" role="alert"
                  >
                    <strong x-text="response.data.message"></strong>
                  </div>
                </template>
              </div>
            </div>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="submissions">
            <template x-if="submissionsHTML">
              <div class="pt-3" x-html="submissionsHTML"></div>
            </template>
            <template x-if="!submissionsHTML">
              <div class="pt-3 text-center text-muted">Nenhuma submissÃ£o ainda.</div>
            </template>
          </div>

          <div role="tabpanel" class="tab-pane fade" id="solves">
            <template x-if="solvesHTML">
              <div class="pt-3" x-html="solvesHTML"></div>
            </template>
            <template x-if="!solvesHTML">
              <div class="pt-3 text-center text-muted">Nenhuma resoluÃ§Ã£o ainda.</div>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

